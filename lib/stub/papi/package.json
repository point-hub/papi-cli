{
  "name": "package-name",
  "version": "0.0.1",
  "description": "Express API starter with Typescript",
  "main": "build/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "dev:compile": "tsc -w --project tsconfig.dev.json",
    "dev:resolve-path": "tsc-alias -w --project tsconfig.dev.json",
    "dev:run": "nodemon build-dev/index.js",
    "dev": "rimraf build-dev && tsc --project tsconfig.dev.json && tsc-alias --project tsconfig.dev.json && concurrently -k npm:dev:*",
    "build:compile": "tsc --project tsconfig.build.json",
    "build:resolve-path": "tsc-alias --project tsconfig.build.json",
    "build": "rimraf build && npm run build:compile && npm run build:resolve-path",
    "start": "node build/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:coverage": "rimraf coverage && NODE_OPTIONS=--experimental-vm-modules jest --runInBand --coverage",
    "lint": "eslint ./src/**/*.ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "keywords": [
    "express",
    "api",
    "starter"
  ],
  "author": "Martien Dermawan Tanama <martiendt@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@point-hub/express-cli": "^0.0.7",
    "@point-hub/express-error-handler": "^0.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.34",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "concurrently": "^7.2.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "prettier": "2.6.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "tsc-alias": "^1.6.7",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14.16"
  }
}
